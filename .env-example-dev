# Database
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=wordpress_db
MYSQL_USER=wordpress_user
MYSQL_PASSWORD=wordpress_password

# WordPress
WORDPRESS_DB_HOST=db:3306 # 'db' is the service name of your database container
WORDPRESS_DB_USER=${MYSQL_USER}
WORDPRESS_DB_PASSWORD=${MYSQL_PASSWORD}
WORDPRESS_DB_NAME=${MYSQL_DATABASE}
WORDPRESS_TABLE_PREFIX=wp_ # Optional, but good practice
WORDPRESS_DEBUG=true # Set to false for production
WORDPRESS_URL=http://localhost:8000 # Adjust port if you change it below
